<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.PaintingDetail">

        <ImageView
            android:id="@+id/painting_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="35dp"
            android:scaleType="centerCrop"
            android:src="@drawable/intro1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/prata"
                android:text="Pintura"
                android:textSize="24sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/not_saved_icon"/>
            <ImageButton
                android:id="@+id/open_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_marginEnd="25dp"
                android:src="@drawable/baseline_open_in_new_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/painting_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archia"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:text="Autor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/painting_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/archia"
            android:text="Location"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/painting_museum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archia"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:text="Museum"
            android:textSize="16sp" />

            <TextView
            android:id="@+id/painting_technique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archia"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:text="Oleo"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/archia"
            android:justificationMode="inter_word"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="50dp"
            android:text="Lorem ipsum dolor sit amet,
            consectetur adipiscing elit. Morbi et nisl hendrerit,
            aliquet mi sed, scelerisque tortor. Aliquam eu scelerisque quam,
            ac tristique dolor. Aliquam nulla risus, fermentum feugiat tortor quis,
            facilisis cursus arcu. Sed eu purus placerat, aliquet augue nec,
            molestie felis. Fusce porta." />
    </LinearLayout>

</ScrollView>